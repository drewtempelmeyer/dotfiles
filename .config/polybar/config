[colors]
background = #2a292a
foreground = #c2c0c3
white = #c2c0c3
brown = #9b8a79

[bar/master]
width = 100%
height = 26
separator = " "
background = ${colors.background}
foreground = ${colors.foreground}
underline-size = 0
overline-size = 0

font-0 = Dina:pixelsize=8;0
font-1 = Wuncon Siji:size=9;1

[bar/top]
inherit = bar/master
modules-left = wm allow title
modules-center = time
modules-right = ovpn spotify pavolume

padding-right = 1

[module/allow]
type = custom/text
content = "|"
content-foreground = ${colors.brown}

; VPN
[module/ovpn]
type = internal/network
interface = tun0
interval = 3.0
exec-if = pgrep openvpn

format-connected-padding = 1
format-disconnected-padding = 1

format-connected = <label-connected>

label-connected = 
label-connected-foreground = ${colors.brown}

label-disconnected = 
label-disconnected-foreground = ${colors.white}

;spotify
[module/spotify]

type = custom/script
tail = true
exec = ~/.config/polybar/spotify.sh %artist% - %title%

format-foreground = ${colors.white}

format-prefix = ""
fotmat-prefix-font = 1
format-prefix-foreground = ${colors.white}
internal = 1

format-padding = 1

[module/pavolume]
type = custom/script
interval = 2
exec = ~/.config/polybar/pavolume.sh

click-right = exec pavucontrol
click-left = ~/.config/polybar/pavolume.sh --togmute
scroll-up = ~/.config/polybar/pavolume.sh --up
scroll-down = ~/.config/polybar/pavolume.sh --down

label = %output%
label-foreground = ${colors.brown}
format-padding = 1

[module/network]
type = internal/network
interface = wlp3s0
ping-interval = 3
accumlate-stats = true

[module/title]
type = internal/xwindow

format-prefix = "  "
format-foreground = ${colors.brown}

label-foreground = ${colors.brown}
label = "%title:0:35:..% "
label-maxlen = 75

[module/wm]
type = internal/i3
enable-click = true
enable-scroll = false
strip-wsnumbers = true

format-padding = 0
label-focused = 
label-focused-foreground = ${colors.brown}
label-focused-padding = 1

label-unfocused = 
label-unfocused-padding = 1

label-visible = 
label-visible-padding = 1

label-urgent = 
label-urgent-foreground = ${colors.white}
label-urgent-padding = 1

[module/time]
type = internal/date
interval = 40

format-padding = 1

date = "%b %e, %Y - %I:%M %p"
